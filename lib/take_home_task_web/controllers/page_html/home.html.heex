<Layouts.app flash={@flash}>
  <div class="text-4xl font-bold underline">
    Alchemist-Media-Lab-Task
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    <%= if length(@list) > 0 do %>
      <%= for item <- @list do %>
        <div class="m-2 p-4 border border-gray-300 rounded">
          <%= item.name %>
        </div>
      <% end %>
    <% else %>
      <h1>You have no active Campaigns</h1>
    <% end %>
  </div>
</Layouts.app>
